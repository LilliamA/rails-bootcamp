<div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
            <th>Title</th>
            <th>Priority</th>
            <th></th>
            <th></th>
            </tr>
        </thead>
    <tbody> 
    <% tasks.each do |task| %>
    <tr>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= link_to "Edit", edit_task_path(task), :class => "btn", :remote => true, "data-toggle" => "modal", "data-target" => "edit_task-modal" %></td>
        <td><%= link_to 'Done', task_path(task), remote: true,
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>