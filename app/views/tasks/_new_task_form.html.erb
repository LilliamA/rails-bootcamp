<div id="new_task-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Add a New Task</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @task, remote: true do |f| %>

        <div class="form-group">
           <%= f.label :title, "Task Title:", class: "col-md-4 control-label" %> 
        </div>
        <div class="col-md-6">
          <%= f.text_field :title, class: "form-control" %>
        </div><br>

        <div class="form-group">
           <%= f.label :priority, "Task Priority:", class: "col-md-4 control-label" %> 
        </div>
        <div class="col-md-6">
          <%= f.number_field :priority, class: "form-control" %>
        </div><br>

        <div class="form-group">
           <%= f.label :project_id, "Project ID:", class: "col-md-4 control-label" %> 
        </div>
        <div class="col-md-6">
          <%= f.collection_select :project_id, Project.all, :id, :tittle, class: "form-control" %>
        </div><br>

        <div class="col-md-6">
          <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
        </div><br>
      <% end %>
    </div>
  </div>
</div>