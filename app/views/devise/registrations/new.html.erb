<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= devise_error_messages! %>

  <div class="col-md-6">
    <%= image_tag @user.image.thumb.url, :width => 170, :height => 190, class: "figure-img img-fluid rounded" %><br />
  </div>

  <div class="col-md-6">
    <%= f.label :image, class: "col-md-6 control-label" %><br />
    <%= f.file_field :image, class: "form-control" %><br />
  </div>

  <div class="col-md-6" >
    <%= f.label :email, "Email:", class: "col-md-4 control-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",  class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :password_confirmation, "Password Confirmation:", class: "col-md-6 control-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %><br />
  </div>

  <div class="col-md-6">
    <%= f.submit "Sign up", class: "btn btn-default btn-primary" %>
  </div>

  <div class="col-md-6" >
    <%= render "devise/shared/links" %>
  </div>

<% end %>
