<% if @docs %>
    <% @docs.each do  |doc| %>
        <div class="col">
			<figure class="figure">
				<%= image_tag doc.file.thumb.url, :width => 45, :height => 50, class: "figure-img img-fluid rounded" %>
				<figcaption class="figure-caption">
					<%= link_to 'Delete', project_task_comment_doc_path(@project, @task, @comment, doc), remote: true,
                            method: :delete, data: { confirm: 'Are you sure?' } %>
				</figcaption>
			</figure>
		</div>
    <% end %>
<%else%>
<% end %>